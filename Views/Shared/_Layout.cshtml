<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BolsaDeTrabajo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BolsaDeTrabajo.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: black;">
    <div class="container-fluid" style="height: 50px;">
        <!-- Logo y título -->
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="@Url.Content("~/images/MenuCatalogos/logoBolsa.png")" alt="Demostración" style="height: 50px;" class="px-2" />
            <b>BDT</b>
        </a>

        <!-- Botón toggle para pantallas pequeñas -->
        <button class="navbar-toggler text-white border-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Menú desplegable -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white animated-link" asp-area="" asp-controller="Home" asp-action="Catalogos">Catálogos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white animated-link" asp-area="" asp-controller="Home" asp-action="Mantenimientos">Mantenimientos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white animated-link" asp-area="" asp-controller="Home" asp-action="Reportes">Reportes</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    </header>
    <div class="container-fluid px-0 py-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BolsaDeTrabajo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
